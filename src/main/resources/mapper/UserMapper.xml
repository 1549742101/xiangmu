<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
namespace：命名空间，其值为某一个dao层类的具体路径
-->
<mapper namespace="com.example.app.mapper.UserMapper">
    <sql id="user1">
        id,username,password,sno,cno,keyword,regtime,betime
    </sql>
    <select id="login" parameterType="String" resultType="com.example.app.entity.User">
        select <include refid="user1"></include>
        from user where username = ${username} and password = ${password}
    </select>
</mapper>